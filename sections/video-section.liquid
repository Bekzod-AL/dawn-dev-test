<div class="video-section">
  <p class="video-section__title">{{ section.settings.title }}</p>
  <div class="video-section__media">
    {% if section.settings.autoplay %}
      {% assign video_sources_json = '' %}
      {% for source in section.settings.video.sources %}
        {% assign source_url = source.url | escape %}
        {% assign source_mime_type = source.mime_type | escape %}

        {% assign source_json = '{"url": "'
          | append: source_url
          | append: '", "mime_type": "'
          | append: source_mime_type
          | append: '"}'
        %}

        {% if forloop.first %}
          {% assign video_sources_json = source_json %}
        {% else %}
          {% assign video_sources_json = video_sources_json | append: ',' | append: source_json %}
        {% endif %}
      {% endfor %}
      {% assign video_sources_json = '[' | append: video_sources_json | append: ']' %}

      <x-lazy-video
        data-video-sources="{{ video_sources_json |  escape }}"
        data-video-poster="{{ section.settings.video.preview_image |  image_url  }}"
      >
      </x-lazy-video>
    {% else %}
      {{ section.settings.video | video_tag: autoplay: false, controls: true, muted: false }}
    {% endif %}
  </div>
</div>

<style>
  .video-section {
    background-color: #f4f4f4;
    padding: 20px;
  }

  .video-section__title {
    font-size: 24px;
    color: #333;
    text-align: center;
  }

  .video-section__media {
    display: flex;
    justify-content: center;
  }

  .video-section video {
    width: 860px;
    height: 460px;
  }
</style>

{% schema %}
{
  "name": "Video section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Video section"
    },
    {
      "type": "video",
      "id": "video",
      "label": "A shopify hosted video"
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Video autoplay",
      "default": false
    }
  ]
}
{% endschema %}
