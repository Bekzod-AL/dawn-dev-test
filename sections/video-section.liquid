<div class="video-section">
  <p class="video-section__title">{{ section.settings.title }}</p>
  <div class="video-section__media">
    {% render 'lazy-video-snippet',
      video: section.settings.video,
      video_autoplay: section.settings.autoplay,
      width: '860',
      height: '440'
    %}

    {% comment %}
      second variant
      {% if section.settings.autoplay %}
        {% render 'lazy-video-snippet',
          video: section.settings.video,
          video_autoplay: section.settings.autoplay,
          width: '860',
          height: '440'
        %}
      {% else %}
        {{ section.settings.video | video_tag: autoplay: false, controls: true, muted: false }}
      {% endif %}
    {% endcomment %}
  </div>
</div>

<style>
  .video-section {
    background-color: #f4f4f4;
    padding: 20px;
  }

  .video-section__title {
    font-size: 24px;
    color: #333;
    text-align: center;
  }

  .video-section__media {
    display: flex;
    justify-content: center;
  }
</style>

{% schema %}
{
  "name": "Video section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Video section"
    },
    {
      "type": "video",
      "id": "video",
      "label": "A shopify hosted video"
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Video autoplay",
      "default": false
    }
  ]
}
{% endschema %}
