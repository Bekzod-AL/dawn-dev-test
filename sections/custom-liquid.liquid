<script src="{{ 'accordion-block.js' | asset_url }}" defer></script>
<script src="{{ 'section-render.js' | asset_url }}" defer></script>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.padding_top }}px * 0.75);
    padding-bottom: calc({{ section.settings.padding_bottom }}px  * 0.75);
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .container {
    width: 800px;
    margin: 0 auto;
    max-width: 100%;
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="section-{{ section.id }}-padding">
    {{ section.settings.custom_liquid }}
  </div>

  <section-render>
    <div class="container">
      {% comment %} triggers {% endcomment %}
      <a
        href="google.com"
        section-render-trigger="custom-content,custom-content-2,custom-content-3"
        section-render-url="{{ shop.url }}?sections=contact-form,featured-blog,image-with-text"
      >
        Contact form
      </a>

      <div
        section-render-trigger="custom-content"
        section-render-url="{{ shop.url }}?section_id={{ section.id }}"
      >
        Featured blog
      </div>

      <button
        section-render-trigger="custom-content-2"
        section-render-url="{{ shop.url }}?section_id=image-with-text"
      >
        Image with text
      </button>

      <button
        section-render-trigger="custom-content-3"
        section-render-url="{{ shop.url }}?section_id=contact-form"
      >
        Update 6 content
      </button>

      {% comment %} Targets {% endcomment %}

      <div section-render-content="custom-content">1 content...</div>
      <div section-render-content="custom-content-2">2 content...</div>
      <div section-render-content="custom-content-2">3 content...</div>
      <div section-render-content="custom-content-2">4 content...</div>
      <div section-render-content="custom-content-2">5 content...</div>
      <div section-render-content="custom-content-3">6 content...</div>

      <hr>
    </div>
  </section-render>
</div>

{% schema %}
{
  "name": "t:sections.custom-liquid.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "liquid",
      "id": "custom_liquid",
      "label": "t:sections.custom-liquid.settings.custom_liquid.label",
      "info": "t:sections.custom-liquid.settings.custom_liquid.info"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 52
    }
  ],
  "presets": [
    {
      "name": "t:sections.custom-liquid.presets.name"
    }
  ]
}
{% endschema %}
