<script src="{{ 'variant-change.js' |  asset_url }}" defer></script>

<div class="product-section page-width">
  <div class="container">
    <div class="product-wrapper">
      <div class="product-section__images">
        {%- if product.selected_or_first_available_variant.featured_media != null -%}
          {%- assign featured_media = product.selected_or_first_available_variant.featured_media -%}
          <div class="product-section__featured-image">
            <img src="{{ featured_media.preview_image |  img_url: 'master' }}" alt="{{ featured_media.alt }}">
          </div>
        {%- endif -%}
        <div class="product-section__media">
          {% for media in product.media %}
            {% if media.media_type == 'image' %}
              <img src="{{ media.preview_image |  img_url: 'large' }}" alt="{{ media.alt }}">
            {% endif %}
          {% endfor %}
        </div>
      </div>

      <div class="product-section__info">
        <variant-change>
          {% form 'product', product %}
            <input
              data-form-input
              name="id"
              type="hidden"
              value="{{ product.selected_or_first_available_variant.id }}"
            >
            <p class="product__title">
              <span>{{ product.title }}</span>
              <span class="product__vendor">({{ product.vendor }})</span>
            </p>

            <p class="product__price">{{ product.selected_or_first_available_variant.price | money }}</p>

            {% unless product.has_only_default_variant %}
              <div data-current-url="{{ product.url }}" class="product-section__variants-wrapper">
                {% for option in product.options_with_values %}
                  <fieldset class="product-variants" data-group-id="{{ forloop.index0 }}">
                    <legend>{{ option.name }}</legend>

                    {% assign group_index = forloop.index0 %}

                    {% for value in option.values %}
                      <input
                        type="radio"
                        id="{{ section.id }}-{{ value }}"
                        name="{{ option.name }}-{{ group_index }}"
                        hidden
                      >
                      <label
                        class="product-variant"
                        for="{{ section.id }}-{{ value }}"
                        data-variant-trigger
                        data-variant-id="{{ group_index }}"
                        data-variant-value="{{ value }}"
                        {% if value == product.selected_or_first_available_variant.options[group_index] %}
                          data-active-variant
                        {% endif %}
                      >
                        {{- value -}}
                      </label>
                    {% endfor %}
                  </fieldset>
                {% endfor %}
              </div>
            {% endunless %}

            <input type="text" name="quantity" min="1" value="1">

            <div class="product-section__description">
              <span>{{ product.description }}</span>
            </div>

            <button
              data-submit-button
              type="submit"
              class="product__submit-button"
            >
              Add to cart
            </button>

            <script type="application/json">
              {{ product.variants | json }}
            </script>
          {% endform %}
        </variant-change>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Product page",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    }
  ]
}
{% endschema %}

<style>
  .product-wrapper {
    display: flex;
    gap: 0 20px;
  }

  .product-section__images {
    width: 60%;
    margin-top: 20px;
  }

  .product-section__info {
    width: 40%;
  }

  .product-wrapper img {
    width: 100%;
    aspect-ratio: 1/1;
    height: auto;
    object-fit: cover;
    object-position: center center;
  }

  .product-section__media {
    display: flex;
    flex-wrap: wrap;
  }

  .product-section__media img {
    width: 50%;
    padding: 10px;
  }

  .product__title {
    font-size: 20px;
    font-weight: bold;
    text-transform: uppercase;
    margin: 5px 0;
  }

  .product__vendor {
    color: #989898;
    font-size: 14px;
  }

  .product__price {
    color: #ef3636;
    font-size: 20px;
    margin: 0;
  }

  .product-section__variants-wrapper {
    padding: 20px 0;
  }

  .product-variants {
    border: none;
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    padding: 10px 0;
  }

  .product-variant {
    display: inline-block;
    cursor: pointer;
    min-width: 48px;
    text-align: center;
    border: 1px solid #ef3636;
    border-radius: 4px;
    color: #ef3636;
    padding: 4px 10px;
    transition: 100ms all;
    background-color: transparent;
  }

  [data-active-variant] {
    background-color: #ef3636;
    color: #fff;
  }

  .product-variant:hover {
    background-color: #ef3636;
    color: #fff;
  }

  .product__submit-button {
    height: 40px;
    cursor: pointer;
    width: 100%;
    color: #fff;
    font-weight: bold;
    border-radius: 4px;
    border: 1px solid #989898;
    background-color: #989898;
    padding: 10px 20px;
    transition: 100ms all;
    margin-top: 20px;
  }

  .product__submit-button:hover {
    color: #000;
    background-color: transparent;
  }

  /* HTML: <div class="loader"></div> */
  .loader {
    width: 20px;
    height: 20px;
    margin: 0 auto;
    border-radius: 50%;
    border: 5px solid #ffffff;
    animation: l20-1 0.8s infinite linear alternate, l20-2 1.6s infinite linear;
  }
  @keyframes l20-1 {
    0% {
      clip-path: polygon(50% 50%, 0 0, 50% 0%, 50% 0%, 50% 0%, 50% 0%, 50% 0%);
    }
    12.5% {
      clip-path: polygon(50% 50%, 0 0, 50% 0%, 100% 0%, 100% 0%, 100% 0%, 100% 0%);
    }
    25% {
      clip-path: polygon(50% 50%, 0 0, 50% 0%, 100% 0%, 100% 100%, 100% 100%, 100% 100%);
    }
    50% {
      clip-path: polygon(50% 50%, 0 0, 50% 0%, 100% 0%, 100% 100%, 50% 100%, 0% 100%);
    }
    62.5% {
      clip-path: polygon(50% 50%, 100% 0, 100% 0%, 100% 0%, 100% 100%, 50% 100%, 0% 100%);
    }
    75% {
      clip-path: polygon(50% 50%, 100% 100%, 100% 100%, 100% 100%, 100% 100%, 50% 100%, 0% 100%);
    }
    100% {
      clip-path: polygon(50% 50%, 50% 100%, 50% 100%, 50% 100%, 50% 100%, 50% 100%, 0% 100%);
    }
  }
  @keyframes l20-2 {
    0% {
      transform: scaleY(1) rotate(0deg);
    }
    49.99% {
      transform: scaleY(1) rotate(135deg);
    }
    50% {
      transform: scaleY(-1) rotate(0deg);
    }
    100% {
      transform: scaleY(-1) rotate(-135deg);
    }
  }
</style>
